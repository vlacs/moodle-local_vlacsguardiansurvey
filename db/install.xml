<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/db" VERSION="20140701" COMMENT="XMLDB file for Moodle local"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../lib/xmldb/xmldb.xsd"
        >
    <TABLES>
        <TABLE NAME="guardiansurvey" COMMENT="Guardian exit surveys">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" NEXT="modid"/>
                <FIELD NAME="modid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="The id of the module (feedback) that need to be completed by the guardian." PREVIOUS="id" NEXT="student2guardian"/>
                <FIELD NAME="student2guardian" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="the id of the student2guardian table. From this table we can find who needs to fill up the exit survey and who is the student." PREVIOUS="modid" NEXT="completeddate"/>
                <FIELD NAME="completeddate" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" COMMENT="date when the survey was completed - when not completed the field is equal to 0." PREVIOUS="student2guardian" NEXT="emailsentdate"/>
                <FIELD NAME="emailsentdate" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" PREVIOUS="completeddate" NEXT="firstaccessdate"/>
                <FIELD NAME="firstaccessdate" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="emailsentdate" NEXT="lastaccessdate"/>
                <FIELD NAME="lastaccessdate" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="firstaccessdate"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>